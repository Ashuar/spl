 "html": "<div style=\"font-family: Arial, sans-serif;\">\r\n    <table style=\"width: 100%; border-collapse: collapse;\">\r\n        <tr>\r\n            <td style=\"width: 25%;\">\r\n                <img src=\"/files/spl_logo.png\" style=\"width: 70px;\">\r\n            </td>\r\n            <td style=\"width: 20%;text-align: left;font-size: 14px;\">\r\n               Shafi (Pvt.) Limited\r\n 13-KM SHEIKHUPURA ROAD, ZAHID \r\nTOWN, \r\nSheikhupura, Punjab \r\nPAK\r\n            </td>\r\n            <td style=\"text-align: left; font-size: 18px;\">\r\n                <b>Purchase Order</b><br>\r\n                <span style=\"font-size: 14px;\">\r\n                    Number:<br>\r\n                    Date:<br>\r\n                    Page: \r\n                </span>\r\n            </td>\r\n            <td style=\"text-align: left; font-size: 18px;\">\r\n                <b></b><br>\r\n                <span style=\"font-size: 14px;\">\r\n                    {{ doc.name }}<br>\r\n                    {{ doc.transaction_date }}<br>\r\n                    <span id=\"current-page-footer\"></span> of <span id=\"total-pages-footer\"></span>\r\n                </span>\r\n            </td>\r\n        </tr>\r\n    </table>\r\n\r\n    \r\n\r\n    <table style=\"width: 100%; margin-top: 10px;\">\r\n        <tr>\r\n            <td>\r\n                <b>Vendor:</b> <br>{{ doc.supplier }} <br>\r\n            </td>\r\n            <td>\r\n                <b>Delivery Address:</b> <br>{{ doc.company_address or doc.company }} <br>\r\n            </td>\r\n        </tr>\r\n    </table>\r\n\r\n    <table style=\"width: 100%; margin-top: 20px; font-size: 14px;\">\r\n        <thead>\r\n            <tr>\r\n                <th style=\"border-bottom: 1px solid #000; padding: 5px;\">Item</th>\r\n                <th style=\"border-bottom: 1px solid #000; padding: 5px;\">Config</th>\r\n                <th style=\"border-bottom: 1px solid #000; padding: 5px;\">Size</th>\r\n                <th style=\"border-bottom: 1px solid #000; padding: 5px;\">Color</th>\r\n                <th style=\"border-bottom: 1px solid #000; padding: 5px;\">Delivery</th>\r\n                <th style=\"border-bottom: 1px solid #000; padding: 5px;\">Quantity</th>\r\n                <th style=\"border-bottom: 1px solid #000; padding: 5px;\">Unit</th>\r\n                <th style=\"border-bottom: 1px solid #000; padding: 5px;\">Unit Price</th>\r\n                <th style=\"border-bottom: 1px solid #000; padding: 5px;\">Amount</th>\r\n                <th style=\"border-bottom: 1px solid #000; padding: 5px;\">Reference</th>\r\n            </tr>\r\n        </thead>\r\n        <tbody>\r\n            {% for item in doc.items %}\r\n            <tr>\r\n                <td style=\"padding: 5px;\">\r\n                    <a href=\"{{ item.item_code }}\">{{ item.item_name }}</a>\r\n                </td>\r\n                <td style=\"padding: 5px;\">{{ item.config or '' }}</td>\r\n                <td style=\"padding: 5px;\">{{ item.size or '' }}</td>\r\n                <td style=\"padding: 5px;\">{{ item.color or 'Default' }}</td>\r\n                <td style=\"padding: 5px;\">{{ item.schedule_date }}</td>\r\n                <td style=\"padding: 5px;\">{{ item.qty }}</td>\r\n                <td style=\"padding: 5px;\">{{ item.uom }}</td>\r\n                <td style=\"padding: 5px;\">{{ item.rate }}</td>\r\n                <td style=\"padding: 5px;\">{{ item.amount }}</td>\r\n                <td style=\"padding: 5px;\">{{ item.reference or '' }}</td>\r\n            </tr>\r\n           \r\n            {% endfor %}\r\n             <tr style=\"border-top: 1px solid #000;\">\r\n                <td>Total:</td>\r\n                <td></td>\r\n                <td></td>\r\n                <td></td>\r\n                <td></td>\r\n                <td>{{doc.total_qty }}</td>\r\n                <td></td>\r\n                <td></td>\r\n                <td>{{ doc.total }}</td>\r\n                <td></td>\r\n            </tr>\r\n        </tbody>\r\n    </table>\r\n\r\n\r\n    <table style=\"width: 100%; margin-top: 100px; font-size: 14px;\">\r\n        <tr style=\"border-top: 1px solid #000;\">\r\n        \r\n             <td></td><td><b>Sub Total:</b></td><td>{{ doc.total }}</td><td></td>\r\n        </tr>\r\n         <tr>\r\n             <td></td><td><b>Discount:</b></td><td>{{ doc.discount_amount or 0 }}</td><td></td>\r\n        </tr>\r\n         <tr>\r\n             <td></td><td><b>Misc. Charges:</b></td><td>{{ doc.other_charges_total or 0 }}</td><td></td>\r\n        </tr>\r\n         <tr>\r\n             <td></td><td><b>Tax:</b></td><td>{{ doc.total_taxes_and_charges or 0 }}</td><td></td>\r\n        </tr>\r\n         <tr>\r\n             <td></td><td><b>Order Total:</b>  <span style=\"font-size: 14px;\">PKR</Span></td><td>{{ doc.grand_total }}</td><td></td>\r\n        </tr>\r\n    </table>\r\n</div>\r\n<!-- JavaScript for Page Numbering -->\r\n<script>\r\n    document.addEventListener(\"DOMContentLoaded\", function() {\r\n        let totalPages = Math.ceil(document.body.scrollHeight / window.innerHeight);\r\n        let currentPage = 1;\r\n\r\n        document.getElementById(\"current-page\").innerText = currentPage;\r\n        document.getElementById(\"total-pages\").innerText = totalPages;\r\n\r\n        document.getElementById(\"current-page-footer\").innerText = currentPage;\r\n        document.getElementById(\"total-pages-footer\").innerText = totalPages;\r\n    });\r\n</script>",
